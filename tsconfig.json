{
  "compilerOptions": {
    "target": "ES2018",
    "module": "esnext",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "dist/@types",
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "design/level*/*.tiled.json",
    "@types/*",
    "main.ts"
  ] 
}
